<html>
    <head>
        <title>Página Home</title>
    </head>
    <body>
        <h1>Titulo</h1>
        <hr/>
        {{#showWelcome}}
            <p>Olá {{user.name}} {{user.lastname}} você tem {{user.age}} anos</p>
        {{/showWelcome}}

        <hr/>
        {{! Exibição condicional }}
        {{#showOld}}
            <P>Você é velho</p>
        {{/showOld}}


        <hr/>

        {{! Exibição Lista }}
        <h1>Produtos</h1>
        <ul>
            {{#products}}
                <li>{{ title }} - R$ {{ price }}</li>
            {{/products }}
        </ul>

        <hr/>

        {{! Lista comum }}
        <ul>
            {{#lista}}
                <li>{{ . }}</li>
            {{/lista }}
            {{! Quando não tiver nada na lista = else }}
            {{^lista}}
                Não tem nada na lista
            {{/lista}}
        </ul>
    </body>
</html>